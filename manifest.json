{
	"manifest_version": 3,
	"name": "GST calculator",
	"version": "1.3",	
	"description": "Calculate GST just by selecting numbers",
	"permissions": ["contextMenus", "activeTab", "scripting"],
	"background": {
	  "service_worker": "background.js"
	},
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	  }
	],
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"16": "icons/icon.png",
		"48": "icons/icon.png",
		"128": "icons/icon.png"
	  }
	},
	"icons": {
	  "16": "icons/icon.png",
	  "48": "icons/icon.png",
	  "128": "icons/icon.png"
	}
  }
  